<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:id="@+id/errorLayout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Hello Farmer, Welcome!"
            android:textColor="@color/green"
            android:textSize="25sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="marquee"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:id="@+id/line"
        android:layout_marginTop="35dp"
        android:background="@color/green" />

    <ScrollView
        android:id="@+id/scrll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt"
        android:layout_below="@+id/line"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="8dp"
        android:scrollbarSize="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="2dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/image"
                android:layout_gravity="center"
                android:src="@drawable/img"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/hiererName"
                android:layout_below="@+id/image"
                android:layout_height="wrap_content"
                android:text="hiererName"
                android:textColor="#050505"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="25dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status:"
                        android:layout_marginTop="5dp"
                        android:textColor="#050505"
                        android:textStyle="bold"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/status"
                        android:text=""
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#050505"
                        android:textSize="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lender Contact:"
                        android:layout_marginTop="5dp"
                        android:textColor="#050505"
                        android:textStyle="bold"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/lContact"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#050505"
                        android:textSize="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hirer Contact:"
                        android:layout_marginTop="5dp"
                        android:textColor="#050505"
                        android:textStyle="bold"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/hContact"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#050505"
                        android:textSize="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item Name:"
                        android:layout_marginTop="5dp"
                        android:textColor="#050505"
                        android:textStyle="bold"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/iName"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#050505"
                        android:textSize="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hiring Days:"
                        android:layout_marginTop="5dp"
                        android:textColor="#050505"
                        android:textStyle="bold"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/days"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#050505"
                        android:textSize="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Overdue Days:"
                        android:layout_marginTop="5dp"
                        android:textColor="#050505"
                        android:textStyle="bold"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/oDays"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#050505"
                        android:textSize="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Farm Name:"
                        android:layout_marginTop="5dp"
                        android:textColor="#050505"
                        android:textStyle="bold"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/farm"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#050505"
                        android:textSize="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Cost:"
                        android:layout_marginTop="5dp"
                        android:textColor="#050505"
                        android:textStyle="bold"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/cost"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#050505"
                        android:textSize="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Overdue Sum:"
                        android:layout_marginTop="5dp"
                        android:textColor="#050505"
                        android:textStyle="bold"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/ocost"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#050505"
                        android:textSize="20dp"/>
                </LinearLayout>

            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Delivery"
                android:textColor="@color/bl"
                android:layout_gravity="center"
                android:background="@drawable/button_background"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:onClick="del"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View all Orders"
                android:textColor="@color/bl"
                android:layout_gravity="center"
                android:background="@drawable/button_background"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:onClick="co"/>

        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:padding="2dp"
        android:background="@color/green"
        android:id="@+id/bt"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:layout_marginBottom="0dp"
            android:padding="8dp"
            android:clickable="true"
            android:onClick="hm">

            <ImageButton
                android:id="@+id/button1"
                android:layout_width="42dp"
                android:layout_height="23dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/home"
                android:scaleType="fitXY"
                android:clickable="true"
                android:onClick="hm"
                android:background="@android:color/transparent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="2dp"
                android:textAlignment="center"
                android:clickable="true"
                android:onClick="hm"
                android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:onClick="up">

            <ImageButton
                android:id="@+id/button2"
                android:layout_width="42dp"
                android:layout_height="23dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/upload"
                android:scaleType="fitXY"
                android:clickable="true"
                android:onClick="up"
                android:background="@android:color/transparent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:clickable="true"
                android:onClick="up"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/hm"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:onClick="od">

            <ImageButton
                android:id="@+id/button3"
                android:layout_width="42dp"
                android:layout_height="23dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/order"
                android:scaleType="fitXY"
                android:clickable="true"
                android:onClick="od"
                android:background="@android:color/transparent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:clickable="true"
                android:onClick="od"
                android:textSize="15sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:id="@+id/od"
            android:padding="8dp"
            android:clickable="true"
            android:onClick="mo">

            <ImageButton
                android:id="@+id/button5"
                android:layout_width="42dp"
                android:layout_height="23dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/myord"
                android:scaleType="fitXY"
                android:clickable="true"
                android:onClick="mo"
                android:background="@android:color/transparent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Orders"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:clickable="true"
                android:onClick="mo"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:onClick="store">

            <ImageButton
                android:id="@+id/buttonStore"
                android:layout_width="42dp"
                android:layout_height="23dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/store"
                android:scaleType="fitXY"
                android:clickable="true"
                android:onClick="store"
                android:background="@android:color/transparent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Store"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:clickable="true"
                android:onClick="store"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:onClick="ma">

            <ImageButton
                android:id="@+id/button4"
                android:layout_width="42dp"
                android:layout_height="23dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/me"
                android:scaleType="fitXY"
                android:clickable="true"
                android:onClick="ma"
                android:background="@android:color/transparent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:clickable="true"
                android:onClick="ma"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>